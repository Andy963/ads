# Core API keys
CLAUDE_API_KEY=your-claude-api-key
# Gemini (supporting agent)
# ENABLE_GEMINI_AGENT=1
# GEMINI_API_KEY=your-gemini-api-key
# GEMINI_MODEL=gemini-2.0-flash
# Optional: allow non-Codex agents to use local tools via <<<tool.* ...>>>
# ENABLE_AGENT_EXEC_TOOL=1
# AGENT_EXEC_TOOL_ALLOWLIST=* # 可选：限制可执行命令；'*' 表示不限制
# ENABLE_AGENT_FILE_TOOLS=1
# ENABLE_AGENT_APPLY_PATCH=1
# ADS_AGENT_MAX_TOOL_ROUNDS=0 # 0=不限制工具回合；也可设置为 10/20 等
# AGENT_FILE_TOOL_MAX_BYTES=204800
# AGENT_FILE_TOOL_MAX_WRITE_BYTES=1048576
# AGENT_APPLY_PATCH_MAX_BYTES=524288
# Optional overrides
# GEMINI_BASE_URL=
# GEMINI_API_VERSION=v1beta
# Optional: OAuth / Vertex AI
# GEMINI_ACCESS_TOKEN=
# GOOGLE_GENAI_USE_VERTEXAI=true
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# Optional: Tavily search (Tavily Search Tool)
TAVILY_API_KEY=your-tavily-api-key
# Or provide multiple keys (comma-separated)
# TAVILY_API_KEYS=key1,key2

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ALLOWED_USERS=123456789
# Directory whitelist shared by Web/Telegram/CLI (comma-separated absolute paths)
ALLOWED_DIRS=/home/andy/ads

# Web Console
ADS_WEB_HOST=0.0.0.0
ADS_WEB_PORT=8787
# Token required by WebSocket clients (set empty to disable auth)
ADS_WEB_TOKEN=change-me
