{
  "name": "ads",
  "version": "0.1.0",
  "type": "module",
  "description": "AI-driven specification-based development workflow automation with Telegram bot support",
  "author": "ADS Contributors",
  "license": "MIT",
  "keywords": [
    "ai",
    "specification",
    "telegram-bot",
    "workflow",
    "automation",
    "codex",
    "openai"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andy963/ads.git"
  },
  "homepage": "https://github.com/Andy963/ads#readme",
  "bugs": {
    "url": "https://github.com/Andy963/ads/issues"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/copy-templates.js",
    "start": "node dist/src/ads.js",
    "dev": "tsx watch src/ads.ts",
    "test": "tsx --test tests/**/*.test.ts",
    "coverage": "c8 --all --include src --exclude 'src/telegram/**' --reporter=text --reporter=lcov npm test",
    "web": "node dist/src/web/server.js",
    "lint": "eslint . --ext .ts",
    "mcp": "node dist/src/mcp/server.js"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "ads": "./dist/src/ads.js",
    "ads-telegram": "./dist/src/telegram/cli.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.50",
    "@grammyjs/types": "^3.22.2",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@openai/codex-sdk": "^0.63.0",
    "better-sqlite3": "^9.6.0",
    "grammy": "^1.38.3",
    "picocolors": "^1.0.0",
    "toml": "^3.0.0",
    "yaml": "^2.6.0",
    "zod": "^3.23.8",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.5.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "c8": "^9.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.46.4"
  }
}
